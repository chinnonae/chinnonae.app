services:
  cadvisor:
    image: "{{ docker_exporters_cadvisor_image_url }}:{{ docker_exporters_cadvisor_image_tag }}"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk:/dev/disk:ro
    ports:
      - {{ docker_exporters_cadvisor_listen_address }}:8080
    privileged: true
    devices:
      - /dev/kmsg
