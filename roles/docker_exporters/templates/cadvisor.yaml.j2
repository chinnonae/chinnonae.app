services:
  cadvisor:
    image: gcr.io/cadvisor/cadvisor
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk:/dev/disk:ro
    publish:
      - {{ docker_exporters_cadvisor_listen_address }}:8080
    privileged: true
    devices:
      - /dev/kmsg
