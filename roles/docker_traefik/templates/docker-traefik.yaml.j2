{{ ansible_managed | comment }}
---
services:
  traefik: 
    image: "{{ docker_traefik_image_url }}:{{ docker_traefik_image_tag }}"
    command:
    ports:
      - 80:80
      - 443:443
    networks:
      - traefik
    volumes:
      - letsencrypt:/letsencrypt
      - ./traefik.yaml:/etc/traefik/traefik.yml
      - /var/run/docker.sock:/var/run/docker.sock

volumes:
  letsencrypt: {}

networks:
  traefik:
    name: traefik
